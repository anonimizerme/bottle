{
  "name": "bottle",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "docker-compose -p bottle-dev stop && docker-compose -p bottle-dev up -d && npm run docker-compose:logs",
    "test": "docker-compose -p bottle-test -f docker-compose.yml -f docker-compose.test.yml run server npm run container:server:test",
    "posttest": "docker-compose -p bottle-test -f docker-compose.yml -f docker-compose.test.yml down",
    "start": "node server/index.js",
    "client_dev": "webpack-dev-server",
    "bots": "node common/bot.js",
    "docker-server-console": "docker-compose -f docker-compose.yml -f docker-compose.test.yml run server /bin/sh",
    "docker-compose:rebuild": "docker-compose -p bottle-dev stop && docker-compose -p bottle-dev build --no-cache --force-rm server",
    "docker-compose:logs": "concurrently -p [{name}] -n server \"docker-compose -p bottle-dev logs -f --tail=5 server\"",
    "container:server:start": "nodemon --watch server --watch common server/index.js --verbose",
    "container:server:test": "./node_modules/.bin/knex --env default migrate:latest && mocha --exit tests/**/*"
  },
  "dependencies": {
    "animejs": "^3.2.0",
    "axios": "^0.21.1",
    "css-loader": "^4.3.0",
    "dotenv": "^8.2.0",
    "faker": "^5.1.0",
    "jsonschema": "^1.2.5",
    "knex": "^0.21.1",
    "lodash": "^4.17.15",
    "objection": "^2.1.3",
    "pg": "^8.2.1",
    "pixi.js": "^5.2.1",
    "redux": "^4.0.5",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "style-loader": "^1.2.1",
    "uuid": "^8.3.0",
    "vue": "^2.6.12",
    "xstate": "^4.9.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "dotenv-webpack": "^2.0.0",
    "html-webpack-plugin": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "should": "^13.2.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
